@model BetaMovieStore.Models.ViewModel.OrderDetailVM
@{decimal totalPrice = 0; }
<div class="card text-white bg-dark">
    <div class="card-header" id="Order-Header">
        <div class="btn-group">
            <button type="button" class="btn btn-outline-light">
                <b>Customer Name: @Model.OrderOfCustomer.Customer.FirstName @Model.OrderOfCustomer.Customer.LastName</b>
            </button>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-light">
                <b> Order Date: @Model.OrderOfCustomer.OrderDate</b>
            </button>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-light">
                <b> Order Id: @Model.OrderOfCustomer.Id</b>
            </button>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-dark">
            </button>
        </div>

    </div>

    <div class="card-body"style="width:1000px">
        <table class="table table-dark table-striped">
            <thead class="table-light">
                <tr>
                    <th scope="col">Movie Title</th>
                    <th scope="col">Price</th>
       
                </tr>
            </thead>

            <tbody class="table-dark">

                @foreach (var item in Model.OrderRowsOfCustomer)
                {
                    <tr>
                        <td>@item.Movie.Title</td>
                        <td>@item.Price</td>

                    </tr>
                    totalPrice = totalPrice + item.Price;
                }
                <tr>
                    <td> </td>
                    <td> </td>
                </tr>
                <tr>
                    <td>Total Price</td>
                    <td>@totalPrice SEK  </td>
                </tr>
            </tbody>
        </table>
    </div>
 </div>
