@model BetaMovieStore.Models.ViewModel.AdminVM

@{
    ViewBag.Title = "index";
}
<br />
<h2>Movie List</h2>

<p>
    @Html.ActionLink("Create New Movie", "Create")
</p>
<br />
<div class="container">

    <table class="table table-dark table-striped" style="color:ghostwhite ;">
        <thead class="table-light">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Director</th>
                <th scope="col">Release Year</th>
                <th scope="col">Genre</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr scope="row">
                    @Html.Partial("_MoviePartial", item)
                </tr>


            }
        </tbody>
    </table>
</div>
<br />
<br />
<br />
<hr />

<div class="container">
    <h2>Customers List</h2>

    <p>
        @Html.ActionLink("Create New Customers", "CreateCustomers")
    </p>
    <br />
    <div class="container" style="color:ghostwhite">

        <table class="table table-dark table-striped" style="color:ghostwhite">
            <thead class="table-light">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Adress</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Customers)
                {
                    <tr scope="row">
                        @Html.Partial("_CustomersPartial", item)
                    </tr>


                }
            </tbody>
        </table>
    </div>
    <br />
    <hr />
    <br />

</div>
<h2>Orders List</h2>

<br />

<section>
    <div class="container btn btn-light">
        <p style="color:black"><b>Total Number of Orders:@Model.OrderDetails.Count()</b></p>
    </div>
    <br />
    <br />

    <div class="table-responsive col-lg-12">

        @foreach (var item in Model.OrderDetails)
        {
            @Html.Partial("_OrderDetailsPartial", item)
            <br />
     }
  
    </div>
</section>







